<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.fsu.cs.bugzillaclient"
    android:versionCode="4"
    android:versionName="0.13">
    <uses-sdk
        android:minSdkVersion="4" />
    <uses-permission
        android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity
            android:name=".BaseActivity"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"></action>
                <category
                    android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name=".DisplayBugs"
        android:screenOrientation="portrait"></activity>
        <activity android:name=".DisplayProducts"
        android:screenOrientation="portrait"></activity>
        <activity android:name=".HomeScreen"
        android:screenOrientation="portrait"></activity>
        <activity android:name=".ReportBug"
        android:screenOrientation="portrait"></activity>
        <activity android:name=".SettingsScreen"
        android:screenOrientation="portrait"></activity>
        <activity android:name=".ShowMyBugs"
        android:screenOrientation="portrait"></activity>
        <activity android:name=".SingleBug"
        android:screenOrientation="portrait"></activity>

    </application>
</manifest>